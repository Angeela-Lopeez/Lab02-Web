<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar Post</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="container" style="margin-top:32px;">
  <h4>Editar Post</h4>
  <form action="/posts/<%= post._id %>/update" method="post" class="col s12">
    <div class="input-field">
      <input type="text" id="title" name="title" required minlength="5" maxlength="30" value="<%= post.title %>">
      <label for="title" class="active">Título</label>
    </div>

    <div class="input-field">
      <textarea id="content" name="content" class="materialize-textarea" required minlength="10"><%= post.content %></textarea>
      <label for="content" class="active">Contenido</label>
    </div>

    <div class="input-field">
      <input type="url" id="imageUrl" name="imageUrl" value="<%= post.imageUrl || '' %>" placeholder="https://...">
      <label for="imageUrl" class="active">Imagen (URL)</label>
    </div>

    <div class="input-field">
      <input type="text" id="hashtags" name="hashtags" value="<%= (post.hashtags || []).map(h=>'#'+h).join(', ') %>">
      <label for="hashtags" class="active">Hashtags</label>
    </div>

    <div class="input-field">
      <select name="userId" required>
        <% (users || []).forEach(u => { %>
          <option value="<%= u._id %>" <%= post.user && String(post.user._id||post.user)===String(u._id) ? 'selected' : '' %>>
            <%= u.name || u.email %>
          </option>
        <% }) %>
      </select>
      <label>Autor</label>
    </div>

    <button class="btn waves-effect waves-light" type="submit">
      <i class="material-icons left">save</i>Actualizar
    </button>
    <a href="/posts" class="btn-flat">Cancelar</a>
  </form>

  <form action="/posts/<%= post._id %>/delete" method="post" style="margin-top:12px;">
    <button class="btn-flat red-text" onclick="return confirm('¿Eliminar post?')">
      <i class="material-icons left">delete</i>Eliminar
    </button>
  </form>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const elems = document.querySelectorAll('select');
      M.FormSelect.init(elems);
    });
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
