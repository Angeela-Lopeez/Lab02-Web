<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Social Media - Posts</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="grey lighten-4">
  <nav>
    <div class="nav-wrapper teal">
      <a href="/" class="brand-logo center">Social Media</a>
    </div>
  </nav>

  <div class="container">
    <h4 class="center-align">Posts</h4>
    <div class="right" style="margin-bottom: 16px;">
      <a href="/posts/new" class="btn waves-effect waves-light"><i class="material-icons left">add</i>Nuevo Post</a>
    </div>

    <div class="row">
      <% if (posts && posts.length) { %>
        <% posts.forEach(p => { %>
          <div class="col s12 m6 l4">
            <div class="card">
              <div class="card-image">
                <img src="<%= p.imageUrl || 'https://placehold.co/600x400?text=Sin+imagen' %>" alt="Imagen">
              </div>
              <div class="card-content">
                <span class="card-title"><%= p.title %></span>
                <p><%= p.content %></p>
                <p style="margin-top:8px;">
                  <strong>Hashtags: </strong>
                  <% (p.hashtags || []).forEach(h => { %>
                    <span class="chip">#<%= h %></span>
                  <% }) %>
                </p>
              </div>
              <div class="card-action">
                <span><strong>Autor:</strong> <%= (p.user && (p.user.name || p.user.email)) || '—' %></span>
                <div class="right">
                  <a href="/posts/<%= p._id %>/edit" class="btn-flat"><i class="material-icons teal-text">edit</i></a>
                  <form action="/posts/<%= p._id %>/delete" method="post" style="display:inline;">
                    <button class="btn-flat" type="submit" onclick="return confirm('¿Eliminar post?')">
                      <i class="material-icons red-text">delete</i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col s12">
          <div class="card-panel yellow lighten-4">
            No hay posts aún. Crea el primero.
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
